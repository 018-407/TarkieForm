<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bg_login"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLogoAuthorization"
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_four"
            android:layout_margin="@dimen/eighteen"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogoAuthorization"
            android:layout_marginBottom="@dimen/eighty_four"
            android:layout_marginEnd="@dimen/fourty_six"
            android:layout_marginLeft="@dimen/fourty_six"
            android:layout_marginRight="@dimen/fourty_six"
            android:layout_marginStart="@dimen/fourty_six"
            android:layout_marginTop="@dimen/thirty"
            android:background="@drawable/bg_rect_white_rad_twelve_str_one"
            android:orientation="vertical"
            android:paddingBottom="@dimen/twenty_two"
            android:paddingEnd="@dimen/sixteen"
            android:paddingLeft="@dimen/sixteen"
            android:paddingRight="@dimen/sixteen"
            android:paddingStart="@dimen/sixteen"
            android:paddingTop="@dimen/twenty_two">

            <com.codepan.widget.CodePanTextField
                android:id="@+id/etCodeAuthorization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/state_rect_gray_qui_rad_ten_str_green_one"
                android:gravity="center"
                android:hint="Authorization Code"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/six"
                android:textColor="@color/gray_sec"
                android:textSize="@dimen/twenty_three"
                codePan:autoHideKeyboard="true"
                codePan:typeface="@string/proxima_nova_light"/>

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnAuthorization"
                android:layout_width="@dimen/one_hundred_thirty_two"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_two"
                android:background="@drawable/state_rect_green_rad_five"
                android:gravity="center"
                android:padding="@dimen/six"
                android:text="Authorize"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_two"
                codePan:typeface="@string/proxima_nova_bold"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>